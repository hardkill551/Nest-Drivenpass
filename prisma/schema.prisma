// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  email String @unique
  password String
  Card Cards[]
  Credential Credentials[]
  Note Notes[]
  
  @@map("user")
}
model Cards {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
  name String
  cardNumber Int
  printedName String
  securityCode Int
  expirationDate DateTime
  password String
  category CategoryCard
  type TypeCard
  
  @@unique([userId, name])
  @@map("cards")
}
model Credentials {
  id Int @id @default(autoincrement())
  name String
  url String
  emailOrUsername String
  password String
  user User @relation(fields: [userId], references: [id])
  userId Int

  @@unique([userId, name])
  @@map("credentials")
}

model Notes {
  id Int @id @default(autoincrement())
  name String
  text String
  user User @relation(fields: [userId], references: [id])
  userId Int
  
  @@unique([userId, name])
  @@map("notes")
}



enum CategoryCard {
  FISIC
  VIRTUAL
}

enum TypeCard {
  DEBIT
  CREDIT
  BOTH
}